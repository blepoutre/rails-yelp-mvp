<p><%= link_to "Homepage", restaurants_path %></p>

<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<p><strong>Reviews</strong></p>
<p class="btn btn-primary p-2"><%= link_to "➕ Add review", new_restaurant_review_path(@restaurant) %></p>
<ul class="list-group mb-2">
  <% @restaurant.reviews.each do |review| %>
  <li class="list-group-item d-flex justify-content-between"><div class="d-inline w-50"><%= review.rating %> // <%= review.content %></div><%= link_to "🗑️", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>
