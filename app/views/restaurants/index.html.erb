<h1 class="d-flex justify-content-center my-5">Restaurants : </h1>
<ul class="list-group list-group-flush">
  <% @restaurants.each do |restaurant|%>
  <li class="d-flex list-group-item justify-content-between"><%= link_to restaurant.name, restaurant_path(restaurant) %><div><%= link_to "📝", restaurant_reviews_path(:restaurant_id), class: "mx-4" %><%= link_to "🗑️",
  restaurant_path(restaurant),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></div></li>
  <% end %>
</ul>

<p><%= link_to "Add new restaurant", new_restaurant_path, class: "btn btn-primary mt-3" %></p>
